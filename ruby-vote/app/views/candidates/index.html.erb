<h1>Candidate List</h1>
<%= link_to "add candidate", new_candidate_path, class: "btn btn-primary" %>
<table class="table table-hover">
  <thead>
    <tr>
      <td></td>
      <td>名稱</td>
      <td>年齡</td>
      <td>票數</td>
      <td>政見</td>
      <td>處理</td>
    </tr>
  </thead>


  <tbody>
    <% @candidates.each do |candidate| %>
      <tr>
         <td><%= link_to "Vote!", vote_candidate_path(candidate), method:"vote", class: "btn btn-xs btn-danger", data: { confirm: "Vote this one?!" }, method: "post" %></td>
         <td><%= link_to candidate.name , candidate %></td>
         <td><%= candidate.age %></td>
         <td><%= candidate.logs.size %></td>
         <td><%= candidate.politics %></td>
         <td>
           <%= link_to "edit" , edit_candidate_path(candidate), class: "btn btn-success" %>
           <%= link_to "delete" , candidate_path(candidate), method: "delete" , data:{ confirm: "delete??" }, class: "btn btn-danger" %>
         </td>
      </tr>
    <% end %>
   </tbody>
</table>